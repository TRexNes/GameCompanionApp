<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Players"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rex.gameapp.Player"
    android:background="@drawable/button">

    <TextView
        android:id="@+id/player6"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/team_player_6"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/player5"
        android:layout_alignStart="@+id/player5" />

    <TextView
        android:id="@+id/player5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/team_player_5"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/player4"
        android:layout_alignStart="@+id/player4" />

    <TextView
        android:id="@+id/player4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/team_player_4"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/player3"
        android:layout_alignStart="@+id/player3"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/player3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/team_player_3"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/player2"
        android:layout_alignStart="@+id/player2" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/team_player_2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/player1"
        android:layout_alignStart="@+id/player1" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/team_player_1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/editPlayerCaption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editPlayerSpinner"
        android:text="Change"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editPlayerCaption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name to "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/editPlayerSpinner"
        android:layout_toStartOf="@+id/editName" />

    <Spinner
        android:id="@+id/editPlayerSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/player6"
        android:layout_toEndOf="@+id/editPlayerCaption1" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:ems="5"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/editPlayerCaption2"
        android:layout_alignBottom="@+id/editPlayerCaption2"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:onClick="editName"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/addP6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player6"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/player6"
        android:text="+"
        android:onClick="editScore"
        android:background="@drawable/greenbutton"/>

    <Button
        android:id="@+id/addP5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player6"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/player5"
        android:text="+"
        android:onClick="editScore"
        android:background="@drawable/greenbutton"/>

    <Button
        android:id="@+id/addP4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/player4"
        android:layout_toEndOf="@+id/player4"
        android:text="+"
        android:onClick="editScore"
        android:background="@drawable/greenbutton"/>

    <Button
        android:id="@+id/addP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player4"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/player3"
        android:text="+"
        android:onClick="editScore"
        android:background="@drawable/greenbutton"/>

    <Button
        android:id="@+id/addP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/player2"
        android:text="+"
        android:onClick="editScore"
        android:background="@drawable/greenbutton"/>

    <Button
        android:id="@+id/minP6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player6"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/player6"
        android:text="-"
        android:onClick="editScore"
        android:background="@drawable/redbutton"/>

    <Button
        android:id="@+id/minP5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player6"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/player5"
        android:text="-"
        android:onClick="editScore"
        android:background="@drawable/redbutton"/>

    <Button
        android:id="@+id/minP4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player5"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/player4"
        android:text="-"
        android:onClick="editScore"
        android:background="@drawable/redbutton"/>

    <Button
        android:id="@+id/minP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player4"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/player3"
        android:text="-"
        android:onClick="editScore"
        android:background="@drawable/redbutton"/>

    <Button
        android:id="@+id/minP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/player2"
        android:text="-"
        android:onClick="editScore"
        android:background="@drawable/redbutton"/>

    <Button
        android:id="@+id/minP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/player1"
        android:text="-"
        android:onClick="editScore"
        android:background="@drawable/redbutton"/>

    <Button
        android:id="@+id/addP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/player1"
        android:text="+"
        android:onClick="editScore"
        android:background="@drawable/greenbutton"/>

    <TextView
        android:id="@+id/editScoreCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Plus/Minus Score Amount: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/buttonApply"
        android:layout_toEndOf="@+id/editPlayerCaption1" />

    <Button
        android:id="@+id/resetNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Names"
        android:onClick="resetNames"
        android:layout_below="@+id/editName"
        android:layout_toStartOf="@+id/resetScores" />

    <Button
        android:id="@+id/resetScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores"
        android:onClick="resetScores"
        android:layout_alignBaseline="@+id/resetNames"
        android:layout_alignBottom="@+id/resetNames"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/resetNames"
        android:layout_alignBottom="@+id/resetNames"
        android:layout_toStartOf="@+id/resetNames" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/editScoreCaption"
        android:layout_alignStart="@+id/editScoreCaption"
        android:layout_alignEnd="@+id/editScoreCaption">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editScoreCaption"
            android:layout_below="@+id/editScoreCaption"
            android:onClick="onRadioButtonClicked"
            android:text="1     " />

        <RadioButton
            android:id="@+id/radio10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editScoreCaption"
            android:layout_toStartOf="@+id/editPlayerCaption2"
            android:onClick="onRadioButtonClicked"
            android:text="10   " />

        <RadioButton
            android:id="@+id/radio100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editScoreCaption"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@+id/radio1000"
            android:onClick="onRadioButtonClicked"
            android:text="100 " />

        <RadioButton
            android:id="@+id/radio1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editScoreCaption"
            android:layout_toEndOf="@+id/editPlayerCaption2"
            android:onClick="onRadioButtonClicked"
            android:text="1000" />

    </RadioGroup>

</RelativeLayout>
