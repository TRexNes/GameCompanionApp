<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Players"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rex.gameapp.Player">

    <TextView
        android:id="@+id/number_of_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Players"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_player"
        android:layout_marginTop="30dp"
        android:hint="Enter Player Name"
        android:paddingTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_player"
        android:text="@string/Add"
        android:onClick="addPlayerName"
        android:id="@+id/addName"
        android:background="@drawable/button"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/players_list"
        android:layout_below="@+id/addName"
        android:layout_marginTop="20dp"
        />

<Button
        android:text="@string/Remove"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/remove_player_button"
        android:onClick="removePlayer"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"/>

    <Button
        android:text="@string/Add"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/add_player_button"
        android:layout_alignParentEnd="true"
        android:onClick="addPlayer"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"/>

    <TextView
        android:text="2"
        android:id="@+id/numPlayers"
        android:layout_width="150dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
        android:textAlignment="center"
        android:layout_height="35dp"
        android:layout_toStartOf="@id/add_player_button"
        android:layout_alignParentBottom="true"/>






</RelativeLayout>
